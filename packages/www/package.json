{
  "name": "www",
  "version": "6.0.0",
  "private": true,
  "description": "web site for modular-css",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "webpack",
    "build:dist": "webpack --env=dist --optimize-minimize --define process.env.NODE_ENV=\"'production'\"",
    "clean": "shx rm -rf ./dist/* ./gen/*",
    "predeploy": "npm run dist",
    "deploy": "surge --project ./dist --domain m-css.com",
    "predist": "npm run clean && npm run build:dist",
    "dist": "shx cp ./index.html ./dist/index.html",
    "prestart": "npm run clean",
    "start": "webpack-dev-server",
    "test": "true"
  },
  "author": "Pat Cavit <npm@patcavit.com>",
  "license": "MIT",
  "dependencies": {
    "codemirror": "^5.24.2",
    "memory-fs": "^0.4.1",
    "mithril": "^1.0.1",
    "modular-css-core": "^6.0.0",
    "throttleit": "^1.0.0"
  },
  "devDependencies": {
    "buble-loader": "^0.4.1",
    "cssnano-cli": "^1.0.5",
    "modular-css-namer": "^6.0.0",
    "modular-cssify": "^6.0.0",
    "rum": "^3.0.0",
    "shx": "^0.2.2",
    "surge": "^0.19.0",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.5"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    }
  }
}
