{
  "name": "modular-css-root",
  "version": "0.0.0",
  "private": true,
  "author": "Pat Cavit <npm@patcavit.com>",
  "license": "MIT",
  "repository": "tivac/modular-css",
  "bugs": {
    "url": "https://github.com/tivac/modular-css/issues"
  },
  "scripts": {
    "clean": "lerna clean",
    "precommit": "lint-staged",
    "commitmsg": "commitlint --edit",
    "cover": "jest --coverage",
    "lint": "eslint .",
    "parser": "pegjs packages/core/parsers/parser.pegjs",
    "prerelease": "npm test",
    "release": "lerna publish",
    "pretest": "npm run parser",
    "test": "jest",
    "posttest": "npm run lint",
    "watch": "jest --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "browserify": "^16.2.0",
    "cli-tester": "^2.0.0",
    "cssnano": "^4.0.0-rc.1",
    "dedent": "^0.7.0",
    "dentist": "^1.0.3",
    "eslint": "^4.19.1",
    "eslint-config-arenanet": "^3.3.1",
    "eslint-plugin-no-only-tests": "^2.0.0",
    "factor-bundle": "^2.5.0",
    "from2-string": "^1.1.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lerna": "^3.0.0-beta.21",
    "lint-staged": "^7.0.4",
    "modular-css-core": "file:./packages/core",
    "pegjs": "^0.10.0",
    "rollup": "^0.61.1",
    "rollup-plugin-svelte": "^4.1.0",
    "shelljs": "^0.8.1",
    "svelte": "^2.1.1",
    "test-utils": "file:./packages/test-utils",
    "watchify": "^3.9.0",
    "webpack": "^4.6.0"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "node_modules",
      "parsers",
      "test-utils"
    ],
    "watchPathIgnorePatterns": [
      "test/output",
      "test/specimens"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
