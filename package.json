{
  "name": "modular-css",
  "private": true,
  "repository": "tivac/modular-css",
  "bugs": {
    "url": "https://github.com/tivac/modular-css/issues"
  },
  "bin": "./bin/cli.js",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "commitmsg": "validate-commit-msg",
    "clean": "lerna clean",
    "danger": "danger run || true",
    "lint": "eslint .",
    "preview": "changes || true",
    "preversion": "npm test",
    "test": "lerna run test",
    "posttest": "npm run lint",
    "version": "changes",
    "postversion": "git push --follow-tags"
  },
  "author": "Pat Cavit <npm@patcavit.com>",
  "license": "MIT",
  "devDependencies": {
    "danger": "^0.11.4",
    "eslint": "^3.12.0",
    "eslint-config-arenanet": "^3.0.0",
    "husky": "^0.13.1",
    "lerna": "2.0.0-beta.37",
    "locater": "^1.3.0",
    "outdent": "^0.3.0",
    "pinpoint": "^1.1.0",
    "validate-commit-msg": "^2.8.2"
  },
  "eslintConfig": {
    "extends": "arenanet",
    "env": {
      "node": true,
      "mocha": true
    },
    "globals": {
      "Promise": true
    },
    "rules": {
      "prefer-template": "off"
    }
  },
  "nyc": {
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "check-coverage": true,
    "cache": true,
    "reporter": [
      "lcov",
      "text-summary",
      "text"
    ],
    "exclude": [
      "src/parsers/**",
      "test/**"
    ]
  }
}
