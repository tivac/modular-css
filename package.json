{
  "name": "modular-css-root",
  "version": "1.0.0",
  "private": true,
  "repository": "tivac/modular-css",
  "bugs": {
    "url": "https://github.com/tivac/modular-css/issues"
  },
  "scripts": {
    "clean": "lerna clean",
    "precommit": "lint-staged",
    "commitmsg": "validate-commit-msg",
    "cover": "jest --coverage",
    "danger": "danger run || true",
    "lint": "eslint .",
    "preversion": "npm test",
    "test": "jest",
    "posttest": "npm run lint",
    "watch": "jest --watch"
  },
  "author": "Pat Cavit <npm@patcavit.com>",
  "license": "MIT",
  "devDependencies": {
    "danger": "^0.15.0",
    "dedent": "^0.7.0",
    "eslint": "^3.19.0",
    "eslint-config-arenanet": "^3.3.1",
    "husky": "^0.13.3",
    "jest": "^20.0.4",
    "lerna": "^2.0.0-rc.5",
    "lint-staged": "^3.4.2",
    "locater": "^1.3.0",
    "pinpoint": "^1.1.0",
    "shelljs": "^0.7.7",
    "validate-commit-msg": "^2.12.1"
  },
  "eslintConfig": {
    "extends": "arenanet",
    "env": {
      "node": true,
      "jest": true
    }
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "node_modules",
      "parsers"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
