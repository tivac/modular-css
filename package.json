{
  "name": "modular-css-root",
  "version": "0.0.0",
  "private": true,
  "author": "Pat Cavit <npm@patcavit.com>",
  "license": "MIT",
  "repository": "tivac/modular-css",
  "bugs": {
    "url": "https://github.com/tivac/modular-css/issues"
  },
  "scripts": {
    "clean": "lerna clean",
    "precommit": "lint-staged",
    "commitmsg": "validate-commit-msg",
    "cover": "jest --coverage",
    "danger": "danger run || true",
    "postinstall": "lerna bootstrap",
    "lint": "eslint .",
    "prerelease": "npm test",
    "release": "lerna publish --message \"chore: Publish\"",
    "postrelease": "lerna exec --concurrency=1 --ignore=test-utils --ignore=www --ignore=modular-css -- changes",
    "version": "changes",
    "test": "jest",
    "posttest": "npm run lint",
    "watch": "jest --watch"
  },
  "devDependencies": {
    "@studio/changes": "^1.3.0",
    "danger": "^1.1.0",
    "dedent": "^0.7.0",
    "eslint": "^4.0.0",
    "eslint-config-arenanet": "^3.3.1",
    "husky": "^0.13.4",
    "jest": "^21.0.0",
    "lerna": "^2.0.0-rc.5",
    "lint-staged": "^4.0.0",
    "locater": "^1.3.0",
    "pinpoint": "^1.1.0",
    "shelljs": "^0.7.8",
    "validate-commit-msg": "^2.12.2"
  },
  "eslintConfig": {
    "extends": "arenanet",
    "env": {
      "node": true,
      "jest": true
    }
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "node_modules",
      "parsers"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "validate-commit-msg": {
      "warnOnFail": true
    }
  }
}
